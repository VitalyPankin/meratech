<article class="container-dark-dotted">
  <div class="container container-unpadded">
    <div class="row">
      <div class="col-md-12">
        <div class="heading heading-top">
          <span class="title title-dark-alter">{{t "common.latest_releases"}}</span>
        </div>
        <div class="media-list">
          {{#if isEquipmentCatalog}}
            <a target="_blank" href="{{isEquipmentCatalog.file}}">
              <div class="col-md-6 clearfix hero-item">
                <div class="image product">
                  <img src="/assets/images/media/catalog-iso-2.png">
                </div>
                <div class="category">{{t "media_center.types.catalog"}}</div>
                {{#if isRuLocale}}
                <div class="title">{{isEquipmentCatalog.title_ru}}</div>
                <div class="description">{{isEquipmentCatalog.description_ru}}</div>
                <div class="button button-red">{{t "common.get_catalog"}}</div>
                {{else}}
                <div class="title">{{isEquipmentCatalog.title_en}}</div>
                <div class="description">{{isEquipmentCatalog.description_en}}</div>
                <div class="button button-red">{{t "common.get_catalog"}}</div>
                {{/if}}
              </div>
            </a>
          {{/if}}

          {{#each documentsLatest as |item index|}}
          <a target="_blank" href="{{item.link}}">
            <div class="item col-md-3 col-sm-6 col-xs-12">
              <div class="image {{item.type}}">
                <img src="{{item.image}}">
              </div>
              <div class="category">{{t (concat "media_center.types." item.type)}}</div>
              <div class="title">{{{item.name}}}</div>
            </div>
          </a>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</article>
