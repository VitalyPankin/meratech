<article class="news-header">
  <div class="container">
		<div class="page-title title">{{t "media_center.media_center_title"}}</div>
    <div class="body controls">
      <div class="centered-input centered-input-media">
        {{input insert-newline="search" allowedKeys="enter" value=searchField placeholder=placeholderText submit="search"}}
        {{#if searchQuery}}
        <div class="label">{{t "media_center.search_for"}} <span>{{searchQuery}}</span> {{t "common.in"}} <strong>{{t "media_center.media"}}</strong></div>
        {{/if}}
      </div>
    </div>
	</div>
</article>
{{#if isSearchOn}}
<article>
	<div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="heading heading-top">
        	<span class="title title-dark">{{t "common.results"}}</span>

          {{#if listResult.length}}
					<span class="tip">{{listResult.length}} {{t "common.founded"}}</span>
          {{else}}
          <span class="tip">{{t "common.no"}} {{t "common.founded"}}</span>
          {{/if}}
        </div>
        {{#if listResult.length}}
        <ul class="documents-search row">

          {{#each listResult as |item index|}}
          <a target="_blank" href="{{item.link}}">
            <li class="{{item.type}} col-md-3 col-sm-6 col-xs-12">
              {{#if isRuLocale}}
              <div class="title">{{{item.name}}}</div>
              <div class="subtitle">{{t (concat "media_center." item.type)}}</div>
              <div class="description">.pdf <span>(~{{item.size}} {{t "common.kb"}})</span></div>
              {{else}}
              <div class="title">{{{item.name}}}</div>
              <div class="subtitle">{{t (concat "media_center." item.type)}}</div>
              <div class="description">.pdf <span>(~{{item.size}} {{t "common.kb"}})</span></div>
              {{/if}}
            </li>
          </a>
          {{/each}}
        </ul>
        {{else}}
        <div class="page-title">{{t "common.nothing-found-alter"}}</div>
        {{/if}}
      </div>
    </div>
  </div>
</article>

<article class="container-grey">
  <div class="container container-unpadded">
    <div class="row">
      <div class="col-md-12">
        <div class="heading heading-top">
          <span class="title title-dark">{{t "common.related-materials"}}</span>
        </div>
        {{#if listDocumentsResult.length}}
        <div class="media-list">
          {{#each listDocumentsResult as |item index|}}
          <a target="_blank" href="{{item.link}}">
            <div class="item col-md-3 col-sm-6 col-xs-12">
              <div class="image {{item.type}}">
                <img src="{{item.image}}">
              </div>
              <div class="category">{{t (concat "media_center.types." item.type)}}</div>
              <div class="title">{{{item.name}}}</div>
            </div>
          </a>
          {{/each}}
        </div>
        {{else}}
        <div class="page-title">{{t "common.nothing-found-alter"}}</div>
        {{/if}}
      </div>
    </div>
  </div>
</article>
{{else}}

<article class="container-media">
  <div class="outer-wrapper">
    <div class="inner-wrapper">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <div class="page-title">{{t "media_center.media_center_slogan"}}</div>
            <div class="body centered">
              {{t "media_center.media_center_instruction"}}
              <div class="media-intro">
                <div class="stage-1"></div>
                <div class="stage-2"></div>
                <div class="stage-3"></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</article>
{{/if}}
